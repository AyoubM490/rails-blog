<div class="user_con">
  <div class="user_data_post">
    <h2><%= @post.title %> by <span><%= @post.user.name %></span></h2>
    <%= form_with url: "/posts/#{@post.id}/likes", scope: :like do |form| %>
      <%= form.submit "Like this post", class: "post-like-btns" %>
    <% end %>
    <h3>Comment <%= @post.comments_count %>, <span>Likes <%= @post.likes_count %></span></h3>
  </div>
</div>
<div class="comments">
  <% @comments.each do |comment| %>
    <h2>
      <%= comment.user.name %>: <%= comment.text %>
    </h2>
  <% end %>
  <%= render partial: "creation_of_comments", local: { post: @post } %>
</div>
